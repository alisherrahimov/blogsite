<!DOCTYPE html>
<html lang="en">
<%- include ("headAndStyles") %>
<body class="bg-light">
<div class="container">
    <main>
        <div style="margin-top: 10px" class="col-md-7 col-lg-8">
            <h4 class="mb-3">Blog yuklash</h4>
            <form
                    method="POST"
                    action="/blogupload"
                    class="needs-validation"
                    enctype="multipart/form-data"
            >
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">Title</label>
                        <input
                                type="text"
                                class="form-control"
                                id="firstName"
                                placeholder="Title"
                                required
                                name="title"
                        />
                    </div>
                    <div class="col-12">
                        <label for="email" class="form-label"
                        >Description <span class="text-muted"></span
                            ></label>
                        <textarea
                                type="email"
                                class="form-control"
                                id="email"
                                placeholder="description"
                                name="description"
                        ></textarea>
                    </div>
                    <div>
                        <div class="mb-3">
                            <label for="formFileMultiple" class="form-label"
                            >Short Image 240x240 </label
                            >
                            <input
                                    class="form-control"
                                    type="file"
                                    name="image"
                                    id="formFileMultiple"
                                    onchange="loadFile(event)"

                            />
                            <div><img style="margin-top: 10px;margin-bottom: 10px" width="100" height="100" id="image1"
                                /></div>
                            <label for="formFileMultiple" class="form-label"
                            >Logo Image 1080x720</label
                            >
                            <input
                                    class="form-control"
                                    type="file"
                                    name="image"
                                    id="formFileMultiple"
                                    onchange="loadFile2(event)"
                            />

                            <div><img style="margin-top: 10px;" width="100" height="100" id="image2"
                                /></div>
                        </div>
                    </div>
                </div>
                <button
                        style="margin-top: 50px; margin-bottom: 50px"
                        class="w-50 btn btn-primary btn-lg"
                        type="submit"
                >
                    Upload Blog
                </button>
            </form>
        </div>
    </main>
    <% if(success == null){ %>
        <p class="lead"><%= success %></p>
    <% }else{ %>
        <p><%= success %></p>
    <% } %>
</div>
</body>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('image1');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
    var loadFile2 = function (event) {
        var image = document.getElementById('image2');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
</html>
