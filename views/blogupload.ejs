  <body class="bg-light">
    <div class="container">
      <main>
        <div class="py-5 text-center">
          <img
            class="d-block mx-auto mb-4"
            src="/docs/5.0/assets/brand/bootstrap-logo.svg"
            alt=""
            width="72"
            height="57"
          />
          <% if(success==null){%>
          <p class="lead"><%= success %></p>
          <%}else{%>
          <p><%= success %></p>
          <%} %>
        </div>
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">Billing address</h4>
          <form
            method="POST"
            action="/blogupload"
            class="needs-validation"
            enctype="multipart/form-data"
          >
            <div class="row g-3">
              <div class="col-sm-6">
                <label for="firstName" class="form-label">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="firstName"
                  placeholder="Title"
                  required
                  name="title"
                />
              </div>
              <div class="col-12">
                <label for="email" class="form-label"
                  >Description <span class="text-muted"></span
                ></label>
                <textarea
                  type="email"
                  class="form-control"
                  id="email"
                  placeholder="description"
                  name="description"
                ></textarea>
              </div>
              <div>
                <div class="mb-3">
                  <label for="formFileMultiple" class="form-label"
                    >Short image</label
                  >
                  <input
                    class="form-control"
                    type="file"
                    name="image"
                    id="formFileMultiple"
                  />
                  <label for="formFileMultiple" class="form-label"
                    >Logo image</label
                  >
                  <input
                    class="form-control"
                    type="file"
                    name="image"
                    id="formFileMultiple"
                  />
                </div>
              </div>
            </div>
            <button
              style="margin-top: 50px; margin-bottom: 50px"
              class="w-100 btn btn-primary btn-lg"
              type="submit"
            >
              Upload Blog
            </button>
          </form>
        </div>
      </main>
    </div>
  </body>
